<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">
    <data>
        <variable
            name="activity"
            type="com.kt.maps.sample.example.style.BuildingActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_gesture_camera"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.kt.maps.sdk.MapView
            android:id="@+id/building_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="230dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="13dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="13dp"
            android:background="@drawable/basic_button_shape">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/building_enable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/building_enable"
                    android:checked="true"
                    app:switchPadding="10dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/height_slider_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/height_text"
                    android:textSize="15dp"
                    android:textColor="@color/dark_gray"
                    android:layout_marginTop="6dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/height_slider_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/dark_gray"
                    android:layout_marginTop="6dp"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp" />
            </LinearLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/height_min_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="3dp"
                    android:textColor="@color/dark_gray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/height_min_value" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/height_slider"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    style="@style/SliderStyle"
                    app:layout_constraintStart_toEndOf="@id/height_min_value"
                    app:layout_constraintEnd_toStartOf="@id/height_max_value"
                    app:layout_constraintTop_toTopOf="parent"
                    android:valueFrom="0.0"
                    android:valueTo="1.0"
                    android:stepSize="0.1" />

                <TextView
                    android:id="@+id/height_max_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/height_max_value"
                    android:textColor="@color/dark_gray"
                    app:layout_constraintTop_toTopOf="@id/height_min_value"
                    app:layout_constraintStart_toEndOf="@id/height_slider" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- opacity -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/opacity_slider_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/opacity_text"
                    android:textSize="15dp"
                    android:textColor="@color/dark_gray"
                    android:layout_marginTop="6dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/opacity_slider_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/dark_gray"
                    android:layout_marginTop="6dp"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/opacity_min_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="3dp"
                    android:textColor="@color/dark_gray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/opacity_min_value" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/opacity_slider"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    style="@style/SliderStyle"
                    app:layout_constraintStart_toEndOf="@id/opacity_min_value"
                    app:layout_constraintEnd_toStartOf="@id/opacity_max_value"
                    app:layout_constraintTop_toTopOf="parent"
                    android:valueFrom="0.0"
                    android:valueTo="1.0"
                    android:stepSize="0.1" />

                <TextView
                    android:id="@+id/opacity_max_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/opacity_max_value"
                    android:textColor="@color/dark_gray"
                    app:layout_constraintTop_toTopOf="@id/opacity_min_value"
                    app:layout_constraintStart_toEndOf="@id/opacity_slider" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- RGB -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/color_slider_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/color_text"
                    android:textSize="15dp"
                    android:textColor="@color/dark_gray"
                    android:layout_marginTop="6dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/color_slider_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/dark_gray"
                    android:layout_marginTop="6dp"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/color_r_min_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="3dp"
                    android:textColor="@color/dark_gray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/color_r_min_value" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/color_r_slider"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    style="@style/SliderStyle"
                    app:layout_constraintStart_toEndOf="@id/color_r_min_value"
                    app:layout_constraintEnd_toStartOf="@id/color_r_max_value"
                    app:layout_constraintTop_toTopOf="parent"
                    android:valueFrom="0"
                    android:valueTo="255"
                    android:stepSize="1" />

                <TextView
                    android:id="@+id/color_r_max_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/color_r_max_value"
                    android:textColor="@color/dark_gray"
                    app:layout_constraintTop_toTopOf="@id/color_r_min_value"
                    app:layout_constraintStart_toEndOf="@id/color_r_slider" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/color_g_min_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="3dp"
                    android:textColor="@color/dark_gray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/color_g_min_value" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/color_g_slider"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    style="@style/SliderStyle"
                    app:layout_constraintStart_toEndOf="@id/color_g_min_value"
                    app:layout_constraintEnd_toStartOf="@id/color_g_max_value"
                    app:layout_constraintTop_toTopOf="parent"
                    android:valueFrom="0"
                    android:valueTo="255"
                    android:stepSize="1" />

                <TextView
                    android:id="@+id/color_g_max_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/color_g_max_value"
                    android:textColor="@color/dark_gray"
                    app:layout_constraintTop_toTopOf="@id/color_g_min_value"
                    app:layout_constraintStart_toEndOf="@id/color_g_slider" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/color_b_min_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="3dp"
                    android:textColor="@color/dark_gray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/color_b_min_value" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/color_b_slider"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    style="@style/SliderStyle"
                    app:layout_constraintStart_toEndOf="@id/color_b_min_value"
                    app:layout_constraintEnd_toStartOf="@id/color_b_max_value"
                    app:layout_constraintTop_toTopOf="parent"
                    android:valueFrom="0"
                    android:valueTo="255"
                    android:stepSize="1" />

                <TextView
                    android:id="@+id/color_b_max_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/color_b_max_value"
                    android:textColor="@color/dark_gray"
                    app:layout_constraintTop_toTopOf="@id/color_b_min_value"
                    app:layout_constraintStart_toEndOf="@id/color_b_slider" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
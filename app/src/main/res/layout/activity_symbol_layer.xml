<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">
    <data>
        <variable name="activity"
            type="com.kt.maps.sample.example.layer.SymbolLayerActivity"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_background_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.kt.maps.sdk.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="230dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="13dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="13dp"
            android:background="@drawable/basic_button_shape">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/opacity_slider_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/dark_gray"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/opacity_slider_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/dark_gray"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"/>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/opacity_min_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="3dp"
                    android:textColor="@color/dark_gray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"  />

                <com.google.android.material.slider.Slider
                    android:id="@+id/opacity_slider"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    style="@style/SliderStyle"
                    app:layout_constraintStart_toEndOf="@id/opacity_min_value"
                    app:layout_constraintEnd_toStartOf="@id/opacity_max_value"
                    app:layout_constraintTop_toTopOf="parent"
                    android:valueFrom="0.0"
                    android:valueTo="1.0"
                    android:stepSize="0.1"/>
                <TextView
                    android:id="@+id/opacity_max_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_gray"
                    app:layout_constraintTop_toTopOf="@id/opacity_min_value"
                    app:layout_constraintStart_toEndOf="@id/opacity_slider"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/size_slider_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bearing_min_text"
                    android:textSize="15dp"
                    android:textColor="@color/dark_gray"
                    android:layout_marginTop="6dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/size_slider_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/dark_gray"
                    android:layout_marginTop="6dp"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"/>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/size_min_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="3dp"
                    android:textColor="@color/dark_gray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/size_slider"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    style="@style/SliderStyle"
                    app:layout_constraintStart_toEndOf="@id/size_min_value"
                    app:layout_constraintEnd_toStartOf="@id/size_max_value"
                    app:layout_constraintTop_toTopOf="parent"
                    android:valueFrom="0.1"
                    android:valueTo="10.0"
                    android:stepSize="0.1"/>
                <TextView
                    android:id="@+id/size_max_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.1"
                    android:textColor="@color/dark_gray"
                    app:layout_constraintTop_toTopOf="@id/size_min_value"
                    app:layout_constraintStart_toEndOf="@id/size_slider"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/rotate_slider_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/dark_gray"
                    android:layout_marginTop="6dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/rotate_slider_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/dark_gray"
                    android:layout_marginTop="6dp"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"/>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/rotate_min_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="3dp"
                    android:textColor="@color/dark_gray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"  />

                <com.google.android.material.slider.Slider
                    android:id="@+id/rotate_slider"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    style="@style/SliderStyle"
                    app:layout_constraintStart_toEndOf="@id/rotate_min_value"
                    app:layout_constraintEnd_toStartOf="@id/rotate_max_value"
                    app:layout_constraintTop_toTopOf="parent"
                    android:valueFrom="0"
                    android:valueTo="359"
                    android:stepSize="1"/>

                <TextView
                    android:id="@+id/rotate_max_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_gray"
                    app:layout_constraintTop_toTopOf="@id/rotate_min_value"
                    app:layout_constraintStart_toEndOf="@id/rotate_slider"  />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
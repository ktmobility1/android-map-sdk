<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">

    <data>

        <variable
            name="activity"
            type="com.kt.maps.sample.example.layer.FillLayerActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.kt.maps.sdk.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/basic_button_shape"
            android:layout_marginStart="20dp"
            android:layout_marginTop="13dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- opacity -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/opacity_text"
                android:textSize="15dp"
                android:textColor="@color/dark_gray"
                android:layout_marginTop="6dp"
                android:textStyle="bold" />

            <com.google.android.material.slider.Slider
                android:id="@+id/opacity_slider"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="@string/opacity_text"
                style="@style/SliderStyle"
                app:layout_constraintTop_toTopOf="parent"
                android:valueFrom="0.0"
                android:valueTo="1.0"
                android:stepSize="0.1" />

            <!-- color -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/color_text"
                android:textSize="15dp"
                android:textColor="@color/dark_gray"
                android:layout_marginTop="6dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/basic_button_shape_pressed"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <com.google.android.material.slider.Slider
                    android:id="@+id/color_r_slider"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    style="@style/SliderStyle"
                    android:valueFrom="0"
                    android:valueTo="255"
                    android:stepSize="1" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/color_g_slider"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    style="@style/SliderStyle"
                    android:valueFrom="0"
                    android:valueTo="255"
                    android:stepSize="1" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/color_b_slider"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    style="@style/SliderStyle"
                    android:valueFrom="0"
                    android:valueTo="255"
                    android:stepSize="1" />

            </LinearLayout>

            <!-- outline color -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/outline_color_text"
                android:textSize="15dp"
                android:textColor="@color/dark_gray"
                android:layout_marginTop="6dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/basic_button_shape_pressed"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/outline_color_enabled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    app:switchPadding="10dp" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/outline_color_r_slider"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    style="@style/SliderStyle"
                    android:valueFrom="0"
                    android:valueTo="255"
                    android:stepSize="1" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/outline_color_g_slider"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    style="@style/SliderStyle"
                    android:valueFrom="0"
                    android:valueTo="255"
                    android:stepSize="1" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/outline_color_b_slider"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    style="@style/SliderStyle"
                    android:valueFrom="0"
                    android:valueTo="255"
                    android:stepSize="1" />

            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
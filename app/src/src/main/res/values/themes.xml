<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--    <style name="Theme.KtMapSample" parent="android:Theme.Material.Light.NoActionBar"/>-->
    <style name="Theme.KtMapSample" parent="Theme.AppCompat.Light.NoActionBar"/>
    <style name="Theme.KtMapSample.actionbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/mint</item>
        <item name="colorPrimaryDark">#8AC2B7</item>
    </style>

    <style name="TooltipStyle" parent="Widget.MaterialComponents.Tooltip">
        <!-- background color of the Tooltip -->
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="ThemeOverlay.Slider" parent="">
        <!-- color used by the text in the Tooltip -->
        <item name="colorOnPrimary">@color/dark_gray</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorSurface">@color/teal_700</item>
    </style>

    <style name="SliderStyle" parent="@style/Widget.MaterialComponents.Slider">
        <item name="labelStyle">@style/TooltipStyle</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Slider</item>
    </style>

</resources>